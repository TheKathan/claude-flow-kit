{
  "agents": {
    "vue-developer": {
      "type": "frontend-developer",
      "description": "Vue/Nuxt frontend developer",
      "model": "sonnet",
      "file_patterns": [
        "**/*.vue",
        "**/*.ts"
      ],
      "tools": [
        "Read",
        "Edit",
        "Write",
        "Bash"
      ]
    },
    "vue-test-specialist": {
      "type": "test-specialist",
      "description": "Vue test specialist using Vitest and Vue Test Utils",
      "model": "sonnet",
      "file_patterns": [
        "**/*.test.ts",
        "**/*.spec.ts"
      ],
      "tools": [
        "Read",
        "Edit",
        "Write",
        "Bash"
      ]
    },
    "frontend-code-reviewer": {
      "type": "code-reviewer",
      "description": "Frontend code reviewer for Vue, accessibility, and best practices",
      "model": "sonnet",
      "tools": [
        "Read",
        "Grep"
      ]
    },
    "integration-tester": {
      "type": "integration-tester",
      "description": "Execute tests and enforce quality gates",
      "model": "sonnet",
      "tools": [
        "Bash",
        "Read"
      ],
      "preferences": {
        "test_command": "npx vitest run --coverage"
      }
    }
  }
}
